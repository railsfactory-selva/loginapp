<% form_for :login,:url=>{:controller=>"on_off_network",:action=>"off_net_validate_pin"}, :html => {:id => "off_net_send_pin" }  do|f| %>
<br>
<br>
<p>
<strong>Verifying</strong> <p>
<br>Check your mobile device for a verification PIN.  Enter the PIN below to verify the request.
</p>
<br>
<br>
<p>
<div style="height: 65px">
	<div id="firstCol_b">
		<label for="phone"><span>SMS Text PIN</span></label> 
	</div>
	<div id="firstCol_a">
		<img src="/images/att_fi_tchscrn_rgb_grd.png" alt="" height="50"/>
  </div>
<div class="input-c" id="secondCol_a" >
			<%= f.text_field :phone, :onkeypress=>"javascript: return checkIt(event);javascript: limitText(this,this.countdown,4);",:onKeyUp=>"javascript:limitText(this,this.form.countdown,4);", :style => "width:85px;" %>
	</div>
<div id="secondCol_b" style="left: 156px; top: -65px">
		<p>
		<a class="buttonSmall ok" href="<%= resend_pin_path %>">Resend PIN</a>
		</p>
	</div>
		
</div>
<div>
<span style="text-align:center; color:green;position:absolute;margin-left:-140px;width:250px;"><%= flash[:net_success] %></span>
		<span style="text-align:center; color:red;position:absolute;margin-left:-140px;width:250px;"><%= flash[:net_error] %></span>
</div>
<!--end SMS Text msg Code-->
<br>
<br>
<br>
<br>
<div class="button-group">
<p>
<a class="button ok" href="javascript:off_net_send_pin();" style="width:40%">OK</a>
<a class="button cancel" href="<%= login_path(:login => "pin_cancel", :scope => @display_scope, :client_id => @client_id) %>" style="width:51%">Cancel</a>
</p>
</div>
</div>
<% end %>
